			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="250" duration="1000" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" duration="4000" mode="EaseOutQuint"/>
				<animation property="scale" from="1" to="1.01" begin="4000" duration="1500" autoreverse="true" repeat="forever" mode="EaseOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="250" duration="1000" mode="Linear"/>
				<animation property="offsetX" from="1" to="0" duration="4000" mode="EaseOutQuint"/>
				<animation property="scale" from="1" to="1.01" begin="4000" duration="1500" autoreverse="true" repeat="forever" mode="EaseOut"/>
			</storyboard>
		</image>
		<image name="md_cartridge" extra="true">
			<visible>false</visible>
			<zIndex>240</zIndex>
		</image>
		<image name="md_boxart" extra="true">
			<visible>false</visible>
			<zIndex>240</zIndex>
		</image>
		<control name="Artwork2, Artwork3, Artwork4, PreviewVid">
			<storyboard event="deactivateNext">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="scale" to="3" begin="" autoreverse="false" duration="200" mode="easyIn"/>
				<animation property="opacity" to="0" begin="100" duration="150" mode="linear"/>
			</storyboard>
		</control>
	        <text name="gamethemeauthor" extra="true">
           <text>Theme by : Roni</text>
        </text>
</customView>
