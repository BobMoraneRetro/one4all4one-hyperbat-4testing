<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<image name="Background" extra="true">
			<path>./Background.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.500000000000 0.500000000000</pos>
			<size>1.000000000000 1.000000000000</size>
			<zIndex>100</zIndex>
			<scaleOrigin>0 -0.3</scaleOrigin>
		</image>
		<video name="PreviewVid" extra="true">
			<path>{game:video}</path>
			<pos>0.327999092044 0.660790173899</pos>
			<maxSize>0.417659743502 0.556879658003</maxSize>
			<origin>0.5 0.5</origin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<delay>0.4</delay>
			<effect>none</effect>
			<zIndex>200</zIndex>
			<shader>
				<path>:/shaders/border.glsl</path>
				<cornerRadius>0.01</cornerRadius>
				<borderSize>0.030</borderSize>
				<borderColor>ffffffff</borderColor>
				<innerShadowSize>0.01</innerShadowSize>
				<innerShadowColor>00000030</innerShadowColor>
				<outerShadowSize>0.020</outerShadowSize>
				<outerShadowColor>000000ff</outerShadowColor>
			</shader>
		</video>
		<control name="PreviewVid,Videobezel">
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="250" duration="500" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" duration="4000" mode="EaseOutQuint"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="250" duration="1000" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" duration="4000" mode="EaseOutQuint"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="250" duration="1000" mode="Linear"/>
				<animation property="offsetY" from="1" to="0" duration="4000" mode="EaseOutQuint"/>
			</storyboard>
		</control>
		<image name="Artwork4" extra="true">
			<path>./Artwork4.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.362686471290 0.276422149081</pos>
			<size>0.428350192758 0.443889582466</size>
			<zIndex>210</zIndex>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<linearSmooth>true</linearSmooth>
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1500" duration="800" mode="Linear"/>
				<animation property="scale" from="20" to="1" begin="1500" duration="800" autoreverse="false" mode="easyOut"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1500" duration="800" mode="Linear"/>
				<animation property="scale" from="20" to="1" begin="1500" duration="800" autoreverse="false" mode="easyOut"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
				<animation property="scaleOrigin" to="0 0" begin="" duration="" mode="Linear"/>
				<animation property="opacity" from="0" to="1" begin="1500" duration="800" mode="Linear"/>
				<animation property="scale" from="20" to="1" begin="1500" duration="800" autoreverse="false" mode="easyOut"/>
			</storyboard>
		</image>
		<image name="Artwork2" extra="true">
			<path>./Artwork2.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.261902030543 0.045778004767</pos>
			<size>0.202614638774 0.075414570171</size>
			<zIndex>220</zIndex>
			<scaleOrigin>-0.3 -0.3</scaleOrigin>
			<rotationOrigin>0.5 0.5</rotationOrigin>
			<linearSmooth>true</linearSmooth>
			<storyboard event="open">
				<animation property="opacity" from="0" to="0" begin="" duration="" mode="Linear"/>
