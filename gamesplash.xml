<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="splash">
		<!--Définition de l'arriere plan de la vue gamesplash-->
		<splash name="splash">
			<backgroundColor>000000FF</backgroundColor>
		</splash>
		<!--Désactivation de l'image par defaut du gamesplash-->
		<image name="background">
			<visible>false</visible>
		</image>
		<!--Désactivation du texte par defaut du gamesplash-->
		<text name="label">
			<visible>false</visible>
		</text>
		<!--Définition de l'image "fanart" du gamelist de jeu avec un contour blanc en shader-->
		<image name="background_fanart" extra="true">
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>0 1</size>
			<path>firstfile(
			{game:fanart},
			"${themePath}/_systemmedia/systgamesplash/nofanart/" + {game:system:theme} + ".png")</path>
			<roundCorners>0</roundCorners>
			<linearSmooth>true</linearSmooth>
			<color>FFFFFFFF</color>
			<zIndex>1</zIndex>
		</image>
		<image name="fondsplash" extra="true">
			<linearSmooth>true</linearSmooth>
			<path>firstfile(
			"${themePath}/_systemmedia/systgamesplash/fond/" + {game:system:theme} + ".png",
			"${themePath}/_systemmedia/systgamesplash/backcommon.png")</path>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>0 1</size>
			<zIndex>2</zIndex>
		</image>
		<image name="nowloading" extra="true">
			<linearSmooth>true</linearSmooth>
			<path>firstfile(
			"${themePath}/_systemmedia/systgamesplash/nowloading/" + {game:system:theme} + ".png",
			"${themePath}/_systemmedia/systgamesplash/nowloading/default.png")</path>
			<origin>0.5 0.5</origin>
			<pos>0.500260416667 0.498611111111</pos>
			<size>0.619270833333 0.130555555556</size>
			<zIndex>3</zIndex>
		</image>
		<image name="metadata" extra="true">
			<linearSmooth>true</linearSmooth>
			<path>${themePath}/_systemmedia/systgamesplash/metadata.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.500000000000 0.897222222222</pos>
			<size>1.000000000000 0.157407407407</size>
			<zIndex>3</zIndex>
		</image>
		<image name="littleartwork" extra="true">
			<linearSmooth>true</linearSmooth>
			<path>firstfile(
			"${themePath}/_systemmedia/systgamesplash/artwork/" + {game:system:theme} + ".png",
			"${themePath}/_systemmedia/systgamesplash/artwork/default.png")</path>
			<origin>0.5 0.5</origin>
			<pos>0.942708333333 0.898611111111</pos>
			<size>0.064583333333 0.128703703704</size>
			<zIndex>4</zIndex>
		</image>
		<text name="gametitle" extra="true">
			<text>{game:name}</text>
			<singleLineScroll>true</singleLineScroll>
			<visible>true</visible>
			<pos>0.03 0.76</pos>
			<size>0.8 0.2</size>
			<fontSize>0.06</fontSize>
			<color>ffffffff</color>
			<glowColor>00000066</glowColor>
			<glowSize>2</glowSize>
			<alignment>left</alignment>
			<lineSpacing>1.5</lineSpacing>
			<fontPath>${themePath}/_systemmedia/systgamesplash/BebasNeue-Regular.ttf</fontPath>
			<zIndex>1000</zIndex>
		</text>
		<text name="gameinfo" extra="true">
			<text>Release year : {game:releaseyear}  •  Developer : {game:developer}  •  Genre : {game:genre}  •  Languages : {game:lang}</text>
			<visible>true</visible>
			<pos>0.03 0.81</pos>
			<size>0.9 0.2</size>
			<fontSize>0.04</fontSize>
			<color>676666</color>
			<glowColor>00000066</glowColor>
			<glowSize>2</glowSize>
			<alignment>left</alignment>
			<lineSpacing>1.5</lineSpacing>
			<fontPath>${themePath}/_systemmedia/systgamesplash/BebasNeue-Regular.ttf</fontPath>
			<zIndex>1000</zIndex>
		</text>
		<text name="gametemps" extra="true">
			<visible>{game:gametime} &gt; 0 ? 1 : 0</visible>
			<text>'Playtime:' + ' ' + expandseconds({game:gametime})</text>
			<origin>1 1</origin>
			<pos>0.99 0.12</pos>
			<size>0.3 0.2</size>
			<fontSize>0.02</fontSize>
			<color>ffffffff</color>
			<alignment>right</alignment>
			<lineSpacing>1.5</lineSpacing>
			<fontPath>${themePath}/_systemmedia/systgamesplash/BebasNeue-Regular.ttf</fontPath>
			<zIndex>1000</zIndex>
		</text>
		<text name="nogametime" extra="true">
			<visible>{game:gametime} == 0 ? 1 : 0</visible>
			<text>Playtime: No Playtime</text>
			<origin>1 1</origin>
			<pos>0.99 0.12</pos>
			<size>0.3 0.2</size>
			<fontSize>0.02</fontSize>
			<color>ffffffff</color>
			<alignment>right</alignment>
			<lineSpacing>1.5</lineSpacing>
			<fontPath>${themePath}/_systemmedia/systgamesplash/BebasNeue-Regular.ttf</fontPath>
			<zIndex>1000</zIndex>
		</text>
		<text name="gamelastplayed" extra="true">
			<visible>{game:lastplayed} &gt; 1 ? 1 : 0</visible>
			<text>'Last played :' + ' ' + {game:lastplayed}.elapsed().proper()</text>
			<origin>1 1</origin>
			<pos>0.99 0.09</pos>
			<size>0.35 0.1</size>
			<fontSize>0.02</fontSize>
			<color>ffffffff</color>
			<alignment>right</alignment>
			<lineSpacing>1.5</lineSpacing>
			<fontPath>${themePath}/_systemmedia/systgamesplash/BebasNeue-Regular.ttf</fontPath>
			<zIndex>1000</zIndex>
		</text>
		<text name="nogamelastplayed" extra="true">
			<visible>{game:playcount} == 0 ? 1 : 0</visible>
			<text>Last played : Never Launched</text>
			<origin>1 1</origin>
			<pos>0.99 0.09</pos>
			<size>0.35 0.1</size>
			<fontSize>0.02</fontSize>
			<color>ffffffff</color>
			<alignment>right</alignment>
			<lineSpacing>1.5</lineSpacing>
			<fontPath>${themePath}/_systemmedia/systgamesplash/BebasNeue-Regular.ttf</fontPath>
			<zIndex>1000</zIndex>
		</text>
		<text name="system total" extra="true">
			<text>Total games for {game:system:name}: {system:total}</text>
			<origin>1 1</origin>
			<pos>0.99 0.16</pos>
			<size>0.3 0.2</size>
			<fontSize>0.02</fontSize>
			<color>ffffffff</color>
			<alignment>right</alignment>
			<lineSpacing>1.5</lineSpacing>
			<fontPath>${themePath}/_systemmedia/systgamesplash/BebasNeue-Regular.ttf</fontPath>
			<zIndex>1000</zIndex>
		</text>
		<text name="numberfavorites" extra="true">
			<!-- <visible>{game:lastplayed} &gt; 1 ? 1 : 0</visible> -->
			<!-- <text>${lastgamelabel} {game:lastplayed}</text> -->
			<!-- <text>'' + '${lastgamelabel}' + ' ' + {game:lastplayed}.elapsed().proper() + ''</text> -->
			<text>'Total system favorites games :' + ' ' + {system:favorites}.tointeger()</text>
			<origin>1 1</origin>
			<pos>0.99 0.13</pos>
			<size>0.35 0.1</size>
			<fontSize>0.02</fontSize>
			<color>ffffffff</color>
			<alignment>right</alignment>
			<lineSpacing>1.5</lineSpacing>
			<fontPath>${themePath}/_systemmedia/systgamesplash/BebasNeue-Regular.ttf</fontPath>
			<zIndex>1000</zIndex>
		</text>
	</view>
</theme>