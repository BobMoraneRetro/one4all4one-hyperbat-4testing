<?xml version="1.0" encoding="UTF-8"?>
<theme defaultView="hyperbat">
	<formatVersion>7</formatVersion>
	<!-- <include>${bobmediapath}/_gametheme/${system.theme}/Hyperbat/_default/Theme.xml</include> -->
	<include ifSubset="unithfold:unifolder">${extGametheme.defautarcade}</include>
	<include ifSubset="unithfold:systfolder">${extGametheme.defaut}</include>
	<include if="{system.theme} == 'snes'">${bobmediapath}/_gametheme/sufami/hyperbat/_default/theme.xml</include>
	<include if="{system.theme} == 'snes'">${bobmediapath}/_gametheme/satellaview/hyperbat/_default/theme.xml</include>
	<include if="{system.theme} == 'snes'">${bobmediapath}/_gametheme/snes-msu1/hyperbat/_default/theme.xml</include>
	<include if="{system.theme} == 'wonderswan'">${bobmediapath}/_gametheme/wonderswancolor/hyperbat/_default/theme.xml</include>
	<!-- <include if="{system.theme} == 'megadrive'">${bobmediapath}/_gametheme/megacd/hyperbat/_default/theme.xml</include> -->
	<!-- <include if="{system.theme} == 'megadrive'">${bobmediapath}/_gametheme/megadrive-msu/hyperbat/_default/theme.xml</include> -->
	<!-- <include if="{system.theme} == 'megadrive'">${bobmediapath}/_gametheme/sega32x/hyperbat/_default/theme.xml</include> -->
	<!-- <include>(${bobmediapath}/_gametheme/${game:system:theme}/Hyperbat/_default/Theme.xml)</include> -->
	<!-- <extGametheme.defaut>${bobmediapath}/_gametheme/${system.theme}/Hyperbat/_default/Theme.xml</extGametheme.defaut> -->
	<customView name="hyperbat" displayName="${viewchoice.hyperbat}" inherits="gamecarousel">
		<control name="screenshot_extra,video_extra,fanart_extra">
			<visible>false</visible>
		</control>
		<rating name="md_rating">
			<visible>false</visible>
		</rating>
		<video name="md_video">
			<visible>false</visible>
		</video>
		<image name="fanart_extra" extra="true">
			<visible>false</visible>
		</image>
		<image name="md_image" extra="true">
			<visible>false</visible>
		</image>
		<gamecarousel name="gamecarousel">
			<zIndex>501</zIndex>
			<type>vertical_wheel</type>
			<type if="{system.theme} == 'zelda' || 
			{system.theme} == 'assasin' || 
			{system.theme} == 'gta'">horizontal_wheel</type>
			<pos>0.415 0</pos>
			<size>0.8 1</size>
			<logoScale>1.4</logoScale>
			<logoSize>0.150 0.260</logoSize>
			<color>00000000</color>
			<maxLogoCount>8</maxLogoCount>
			<logoRotation>-4.5</logoRotation>
			<logoRotationOrigin>6 0.5</logoRotationOrigin>
			<logoAlignment>center</logoAlignment>
			<imageSource>marquee</imageSource>
			<defaultTransition>instant</defaultTransition>
			<minLogoOpacity>1</minLogoOpacity>
			<transitionSpeed>350</transitionSpeed>
			<!-- <scrollSound>${themePath}/_common/scrollsound/wheelclic.wav</scrollSound> -->
			<scrollSound ifSubset="gamewheelsound:bulle">${themePath}/_common/scrollsound/bulle.wav</scrollSound>
			<scrollSound ifSubset="gamewheelsound:clic">${themePath}/_common/scrollsound/clic.wav</scrollSound>
			<scrollSound ifSubset="gamewheelsound:clicgrave">${themePath}/_common/scrollsound/clicgrave.wav</scrollSound>
			<scrollSound ifSubset="gamewheelsound:frottement">${themePath}/_common/scrollsound/frottement.wav</scrollSound>
			<scrollSound ifSubset="gamewheelsound:poc">${themePath}/_common/scrollsound/poc.wav</scrollSound>
			<scrollSound ifSubset="gamewheelsound:wheelclic">${themePath}/_common/scrollsound/wheelclic.wav</scrollSound>
		</gamecarousel>
		<image name="gamecarouselLogo">
			<linearSmooth>true</linearSmooth>
		</image>
		<text name="gamecarouselLogoText">
			<color>FFFFFFFF</color>
			<glowColor>000000FF</glowColor>
			<glowSize>3</glowSize>
			<lineSpacing>1.0</lineSpacing>
			<fontSize>0.025</fontSize>
		</text>
		<image name="gamecarouselLogo" ifSubset="gamewheelfade:amoitie">
			<storyboard event="activate">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0.3" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="scroll">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0.3" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivate">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0.3" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
		</image>
		<text name="gamecarouselLogoText" ifSubset="gamewheelfade:amoitie">
			<storyboard event="activate">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0.3" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="scroll">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0.3" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivate">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0.3" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
		</text>
		<image name="gamecarouselLogo" ifSubset="gamewheelfade:activate">
			<storyboard event="activate">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="scroll">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivate">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
		</image>
		<text name="gamecarouselLogoText" ifSubset="gamewheelfade:activate">
			<storyboard event="activate">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="scroll">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivate">
				<animation property="zIndex" to="10" begin="500" duration="" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
		</text>
		<text name="gamename" extra="true">
			<visible ifSubset="hsmetadata:deactivate">false</visible>
			<visible ifSubset="hsmetadata:full">true</visible>
			<text>{game:name}</text>
			<alignment>left</alignment>
			<fontPath>${themePath}/_viewgame/hyperbat/AlphaFridgeMagnets.ttf</fontPath>
			<color>f0f000</color>
			<glowColor>0c002e</glowColor>
			<glowSize>1.5</glowSize>
			<glowOffset>2</glowOffset>
			<color if="{system.theme} == 'cps1' || {system.theme} == 'cps2'  || {system.theme} == 'cps3'">f0f000</color>
			<glowColor if="{system.theme} == 'cps1' || {system.theme} == 'cps2'  || {system.theme} == 'cps3'">3432a8</glowColor>
			<glowSize if="{system.theme} == 'cps1' || {system.theme} == 'cps2'  || {system.theme} == 'cps3'">5</glowSize>
			<glowOffset if="{system.theme} == 'cps1' || {system.theme} == 'cps2'  || {system.theme} == 'cps3'">0</glowOffset>
			<color if="{system.theme} == 'snes' || {system.theme} == 'sufami'">e31010</color>
			<glowColor if="{system.theme} == 'snes' || {system.theme} == 'sufami'">FFFFFF</glowColor>
			<glowSize if="{system.theme} == 'snes' || {system.theme} == 'sufami'">2</glowSize>
			<glowOffset if="{system.theme} == 'snes' || {system.theme} == 'sufami'">0</glowOffset>
			<color if="{system.theme} == 'wiiu' || {system.theme} == 'wii'">3499eb</color>
			<glowColor if="{system.theme} == 'wiiu' || {system.theme} == 'wii'">FFFFFF</glowColor>
			<glowSize if="{system.theme} == 'wiiu' || {system.theme} == 'wii'">2</glowSize>
			<glowOffset if="{system.theme} == 'wiiu' || {system.theme} == 'wii'">0</glowOffset>
			<zIndex>999</zIndex>
			<fontSize>0.05</fontSize>
			<size>0.7 0.1</size>
			<pos>0.02 0.77</pos>
			<offsetY ifSubset="hsmetadata:lower">0.085</offsetY>
			<offsetY ifSubset="hsmetadata:full">0</offsetY>
		</text>
		<text name="devetRel" extra="true">
			<visible ifSubset="hsmetadata:deactivate">false</visible>
			<visible ifSubset="hsmetadata:full">true</visible>
			<text>{game:releaseyear} , {game:publisher} , {game:players} ${players} , ${languesdispo} {game:lang}</text>
			<alignment>left</alignment>
			<fontPath>${themePath}/_viewgame/hyperbat/AlphaFridgeMagnets.ttf</fontPath>
			<size>0.5 0.5</size>
			<pos>0.02 0.615</pos>
			<color>ffff00</color>
			<glowColor>0c002e</glowColor>
			<glowSize>1.5</glowSize>
			<glowOffset>2</glowOffset>
			<color if="{system.theme} == 'cps1' || {system.theme} == 'cps2'  || {system.theme} == 'cps3'">f0f000</color>
			<glowColor if="{system.theme} == 'cps1' || {system.theme} == 'cps2'  || {system.theme} == 'cps3'">3432a8</glowColor>
			<glowSize if="{system.theme} == 'cps1' || {system.theme} == 'cps2'  || {system.theme} == 'cps3'">2</glowSize>
			<glowOffset if="{system.theme} == 'cps1' || {system.theme} == 'cps2'  || {system.theme} == 'cps3'">0</glowOffset>
			<color if="{system.theme} == 'snes' || {system.theme} == 'sufami'">FFFFFF</color>
			<glowColor if="{system.theme} == 'snes' || {system.theme} == 'sufami'">e31010</glowColor>
			<glowSize if="{system.theme} == 'snes' || {system.theme} == 'sufami'">2</glowSize>
			<glowOffset if="{system.theme} == 'snes' || {system.theme} == 'sufami'">0</glowOffset>
			<color if="{system.theme} == 'wiiu' || {system.theme} == 'wii'">FFFFFF</color>
			<glowColor if="{system.theme} == 'wiiu' || {system.theme} == 'wii'">3499eb</glowColor>
			<glowSize if="{system.theme} == 'wiiu' || {system.theme} == 'wii'">2</glowSize>
			<glowOffset if="{system.theme} == 'wiiu' || {system.theme} == 'wii'">0</glowOffset>
			<zIndex>999</zIndex>
			<fontSize>0.02</fontSize>
			<offsetY ifSubset="hsmetadata:lower">0.085</offsetY>
			<offsetY ifSubset="hsmetadata:full">0</offsetY>
		</text>
		<image name="pointersdroite" extra="true">
			<!-- <visible ifSubset="hyperwheel:spingh|verticalgh|verticalgheb">false</visible> -->
			<default>${themePath}/_systemmedia/pointers-r/default.png</default>
			<path>${pointers4syst}</path>
			<origin>1 0.5</origin>
			<pos>1.003 0.5</pos>
			<maxSize>0.2 0.3</maxSize>
			<zIndex>502</zIndex>
			<storyboard event="activateNext">
				<animation property="offsetX" from="0" to="-0.002" begin="" duration="100" mode="bump" autoreverse="true"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="offsetX" from="0" to="-0.002" begin="" duration="100" mode="bump" autoreverse="true"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" begin="" duration="0" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" begin="" duration="0" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext" ifSubset="gamewheelfade:amoitie">
				<animation property="offsetX" from="0" to="-0.002" begin="" duration="100" mode="bump" autoreverse="true"/>
				<animation property="opacity" from="1" to="0.3" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="open" ifSubset="gamewheelfade:amoitie">
				<animation property="opacity" from="1" to="0.3" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev" ifSubset="gamewheelfade:amoitie">
				<animation property="offsetX" from="0" to="-0.002" begin="" duration="100" mode="bump" autoreverse="true"/>
				<animation property="opacity" from="1" to="0.3" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivateNext" ifSubset="gamewheelfade:amoitie">
				<animation property="opacity" to="0" begin="" duration="0" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivatePrev" ifSubset="gamewheelfade:amoitie">
				<animation property="opacity" to="0" begin="" duration="0" mode="Linear"/>
			</storyboard>
			<storyboard event="open" ifSubset="gamewheelfade:activate">
				<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="activatePrev" ifSubset="gamewheelfade:activate">
				<animation property="offsetX" from="0" to="-0.002" begin="" duration="100" mode="bump" autoreverse="true"/>
				<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="activateNext" ifSubset="gamewheelfade:activate">
				<animation property="offsetX" from="0" to="-0.002" begin="" duration="100" autoreverse="true" mode="bump"/>
				<animation property="opacity" from="1" to="0" begin="1000" duration="250" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivateNext" ifSubset="gamewheelfade:activate">
				<animation property="opacity" to="0" begin="" duration="0" mode="Linear"/>
			</storyboard>
			<storyboard event="deactivatePrev" ifSubset="gamewheelfade:activate">
				<animation property="opacity" to="0" begin="" duration="0" mode="Linear"/>
			</storyboard>
		</image>
		<!-- <gameextras name="gameextras" ifSubset="hsperview:themejeux"> -->
		<!-- <path ifSubset="unithfold:unifolder" if="{system.hardwareType} == 'arcade'">${bobmediapath}/_gametheme/arcade/hyperbat</path> -->
		<!-- <path ifSubset="unithfold:systfolder">${extgametheme}</path> -->
		<!-- </gameextras> -->
		<gameextras name="gameextras" ifSubset="unithfold:unifolder">
			<path>${extgametheme}</path>
			<path if="{system.hardwareType} == 'arcade'">${bobmediapath}/_gametheme/arcade/hyperbat</path>
			<path if="{system.hardwareType} == 'auto collection'">${bobmediapath}/_gametheme/arcade/hyperbat</path>
		</gameextras>
		<gameextras name="gameextras" ifSubset="unithfold:systfolder">
			<path>${extgametheme}</path>
		</gameextras>
		<image name="vignetagehsg" extra="true">
			<path>${themePath}/_viewgame/hyperbat/overlay.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<zIndex>499</zIndex>
			<opacity>1</opacity>
		</image>
		<!-- <text name="gamethemelabel" ifSubset="authordisplayed:activate" extra="true"> -->
		<!-- <text>Theme by : ${theme.author}</text> -->
		<!-- <alignment>left</alignment> -->
		<!-- <fontPath>${themePath}/_viewsyst/hyperbat/teko-bold.ttf</fontPath> -->
		<!-- <size>0.2 0</size> -->
		<!-- <pos>0.01 0</pos> -->
		<!-- <color>ffff00</color> -->
		<!-- <zIndex>999</zIndex> -->
		<!-- <fontSize>0.03</fontSize> -->
		<!-- <opacity>0.3</opacity> -->
		<!-- </text> -->
		<text name="gamethemeauthor" ifSubset="authordisplayed:activate|showoff|showoffblackwhite|deactivate" extra="true">
			<alignment>left</alignment>
			<fontPath>${themePath}/_viewsyst/hyperbat/teko-bold.ttf</fontPath>
			<size>0.2 0</size>
			<pos>0.01 0</pos>
			<size>0.2 0</size>
			<color>ffffff</color>
			<zIndex>999</zIndex>
			<fontSize>0.03</fontSize>
			<opacity ifSubset="authordisplayed:deactivate">0</opacity>
			<opacity ifSubset="authordisplayed:showoff">1</opacity>
			<opacity ifSubset="authordisplayed:showoffblackwhite">1</opacity>
			<opacity ifSubset="authordisplayed:activate">0.3</opacity>
			<color ifSubset="authordisplayed:showoffblackwhite">000000</color>
			<glowColor ifSubset="authordisplayed:showoffblackwhite">ffffff</glowColor>
			<glowSize ifSubset="authordisplayed:showoffblackwhite">3</glowSize>
			<glowOffset ifSubset="authordisplayed:showoffblackwhite">0</glowOffset>
			<color ifSubset="authordisplayed:activate">ffffff</color>
			<glowColor ifSubset="authordisplayed:activate">ffffff</glowColor>
			<glowSize ifSubset="authordisplayed:activate">0</glowSize>
			<glowOffset ifSubset="authordisplayed:activate">0</glowOffset>
		</text>
		<text name="defaultthemeauthor" ifSubset="authordisplayed:activate|showoff|showoffblackwhite|deactivate" extra="true">
			<visible ifSubset="HSperview:Yes">${IfnoextGamethemeexist}</visible>
			<alignment>left</alignment>
			<fontPath>${themePath}/_viewsyst/hyperbat/teko-bold.ttf</fontPath>
			<size>0.2 0</size>
			<pos>0.01 0</pos>
			<size>0.2 0</size>
			<color>ffffff</color>
			<zIndex>999</zIndex>
			<fontSize>0.03</fontSize>
			<opacity ifSubset="authordisplayed:deactivate">0</opacity>
			<opacity ifSubset="authordisplayed:showoff">1</opacity>
			<opacity ifSubset="authordisplayed:showoffblackwhite">1</opacity>
			<opacity ifSubset="authordisplayed:activate">0.3</opacity>
			<color ifSubset="authordisplayed:showoffblackwhite">000000</color>
			<glowColor ifSubset="authordisplayed:showoffblackwhite">ffffff</glowColor>
			<glowSize ifSubset="authordisplayed:showoffblackwhite">3</glowSize>
			<glowOffset ifSubset="authordisplayed:showoffblackwhite">0</glowOffset>
			<color ifSubset="authordisplayed:activate">ffffff</color>
			<glowColor ifSubset="authordisplayed:activate">ffffff</glowColor>
			<glowSize ifSubset="authordisplayed:activate">0</glowSize>
			<glowOffset ifSubset="authordisplayed:activate">0</glowOffset>
		</text>
		<image name="Background" extra="true">
			<storyboard ifSubset="smoothgametheme:activesmooth" event="deactivateNext">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
			<storyboard ifSubset="smoothgametheme:activesmooth" event="deactivatePrev">
				<animation property="opacity" from="1" to="1" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="200" duration="300" mode="linear"/>
			</storyboard>
		</image>
	</customView>
	<!-- Permet de charger le thème par défaut spécifique au système -->
</theme>
