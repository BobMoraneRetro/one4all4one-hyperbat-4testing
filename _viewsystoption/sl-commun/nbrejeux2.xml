<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<!-- <feature supported="manufacturer"> -->
		<view name="system">
			<text name="fullName" extra="true">
				<text>${system.fullName} | ${system.releaseYearOrNull}</text>
				<alignment>left</alignment>
				<fontPath>${themePath}/_viewsyst/hyperbat/teko-bold.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<pos>0.01 0.75</pos>
				<size>1 0.28</size>
				<zIndex>500</zIndex>
				<!-- <color>D0D0D0FF</color> -->
				<color>FFFFFF</color>
				<glowColor>000000A0</glowColor>
				<glowSize>2</glowSize>
				<scaleOrigin>0 0.5</scaleOrigin>
				<storyboard>
				<animation property="opacity" from="0" to="1" duration="350" mode="easeOut"/>
				<animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
			</storyboard>
			</text>
			<text name="systemInfo">
			<visible ifSubset="nbrjeuxcops1:desactive">false</visible>
			<reflexion>0.20 0.0</reflexion>
			<alignment>left</alignment>
			<pos>0.01 0.8</pos>
			<reflexion>0 0</reflexion>
			<size>1 0.25</size>
			<backgroundColor>00000000</backgroundColor>
			<color>DDDDDDD8</color>
			<glowColor>000000</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>2</glowOffset>
			<fontPath>${themePath}/_viewsyst/hyperbat/teko-bold.ttf</fontPath>
			<fontSize>0.027</fontSize>
			<fontSize ifSubset="systemview:nesicaxlive">0.024</fontSize>
			<scaleOrigin>0 0.5</scaleOrigin>
			<zIndex>151</zIndex>
			<storyboard>
				<animation property="opacity" from="0" to="1" duration="350" mode="easeOut"/>
				<animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
			</storyboard>
		</text>
		</view>
	<!-- </feature> -->
		
		

</theme>